variables:
  GIT_SUBMODULE_STRATEGY: recursive

stages:
  - regex
  - make_check

regex:
  stage: regex
  image: "alpine:latest"
  only:
    refs:
      - merge_requests
  script:
    - apk add bash curl jq
    - unagi/ci-scripts/note_regex.sh

make_check:
  stage: make_check
  image: "paperist/alpine-texlive-ja"
  only:
    refs:
      - merge_requests
  script:
    - ptex2pdf -interaction=nonstopmode -l -ot -kanji=utf8 -synctex=1 document.tex || return -1
